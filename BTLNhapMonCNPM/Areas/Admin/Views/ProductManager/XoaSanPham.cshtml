@model BTLNhapMonCNPM.Models.SanPham

@{
    ViewData["Title"] = "Xóa sản phẩm";
}

<h2>Xóa sản phẩm</h2>

<!-- Form tìm kiếm sản phẩm -->
<form asp-action="TimSanPham" method="post">
    <label>Mã sản phẩm cần xóa:</label>
    <input type="number" name="iMaSP" required />
    <button type="submit" class="btn btn-primary">Tìm</button>
</form>

@if (Model != null)
{
    <table class="table table-bordered mt-3">
        <tr>
            <th>Mã sản phẩm</th>
            <td>@Model.iMaSP</td>
        </tr>
        <tr>
            <th>Tên sản phẩm</th>
            <td>@Model.sTen</td>
        </tr>
        <tr>
            <th>Đơn vị tính</th>
            <td>@Model.sDonViTinh</td>
        </tr>
        <tr>
            <th>Số lượng</th>
            <td>@Model.iSoLuong</td>
        </tr>
        <tr>
            <th>Giá nhập</th>
            <td>@Model.fGiaNhap</td>
        </tr>
        <tr>
            <th>Giá bán</th>
            <td>@Model.fGiaBan</td>
        </tr>
        <tr>
            <th>Cách sử dụng</th>
            <td>@Model.sCachSuDung</td>
        </tr>
        <tr>
            <th>Điều kiện bảo quản</th>
            <td>@Model.sDieuKienBaoQuan</td>
        </tr>
        <tr>
            <th>Hạn sử dụng</th>
            <td>@Model.sHanSuDung</td>
        </tr>
    </table>

    <!-- Nút mở hộp thoại xác nhận xóa -->
    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal">
        Xóa sản phẩm
    </button>

    <!-- Hộp thoại xác nhận xóa -->
    <div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmDeleteLabel">Xác nhận xóa</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Bạn có chắc chắn muốn xóa sản phẩm này? Hành động này không thể hoàn tác!
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <form asp-action="XacNhanXoa" method="post">
                        <input type="hidden" name="iMaSP" value="@Model.iMaSP" />
                        <button type="submit" class="btn btn-danger">Xóa ngay</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

@if (ViewBag.Error != null)
{
    <p class="text-danger">@ViewBag.Error</p>
}

@if (ViewBag.Message != null)
{
    <p class="text-success">@ViewBag.Message</p>
}
